<div class="min-h-screen bg-gray-100">
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8 flex justify-between items-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Dashboard</h1>
      <div>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "rounded-md bg-red-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-red-700" %>
      </div>
    </div>
  </header>
  <main>
    <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <div class="rounded-lg border-4 border-dashed border-gray-200 p-4 h-96">
          <h2 class="text-xl font-semibold mb-4">Welcome, <%= current_user.name || current_user.email %></h2>
          <p class="text-gray-600">This is your dashboard. Customize this page with widgets and information relevant to your users.</p>
          
          <div class="mt-8">
            <h3 class="text-lg font-medium">Quick Actions</h3>
            <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="rounded-md bg-white p-4 shadow">
                <h4 class="text-base font-medium">Profile</h4>
                <p class="mt-2 text-sm text-gray-500">Update your personal information</p>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "mt-3 inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
              </div>
              <div class="rounded-md bg-white p-4 shadow">
                <h4 class="text-base font-medium">Settings</h4>
                <p class="mt-2 text-sm text-gray-500">Manage your account settings</p>
                <%= link_to "Settings", "#", class: "mt-3 inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div> 